<div id="create" v-cloak>

  <div class="uk-container uk-margin-auto" uk-grid>
    <div class="uk-width-3-5 uk-margin-auto uk-padding-remove">
      <ul class="uk-breadcrumb">
        <li><a href="">Administrator Dashboard</a></li>
        <li><span>Create New User</span></li>
      </ul>
      <ajax-form action="newUser" :syncing.sync="syncing" :cloud-error.sync="cloudError" :form-data="newUser" :form-rules="formRules" :form-errors.sync="formErrors" @submitted="submittedForm()">
        <fieldset class="uk-fieldset">
          <legend class="uk-legend uk-text-primary uk-text-uppercase">Demographics</legend>
          <div class="uk-margin">
            <label class="uk-form-label" for="fullName">User's Full Name</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="text" id="fullName" name="fullName" v-model="newUser.fullName">
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="emailAddress">User's Email Address</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="text" id="emailAddress" name="emailAddress" v-model="newUser.emailAddress">
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="organization">User's Organization</label>
            <select class="uk-select" id="organization" name="organization" v-model="newUser.organization">
              <option v-for="(value) in organizations" :value="value.id">{{value.shortName}}</option>
            </select>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="password">Password (leave blank to auto-generate)</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="password" id="password" name="password" autocomplete="new-password" v-model="newUser.password">
            </div>
          </div>
          <div class="uk-margin">
            <label class="uk-form-label" for="confirmPassword">Confirm Password</label>
            <div class="uk-form-controls">
              <input class="uk-input" type="password" id="confirmPassword" name="confirmPassword" autocomplete="new-password" v-model="newUser.confirmPassword">
            </div>
          </div>
        </fieldset>
        <ajax-button type="submit" class="uk-button uk-button-primary uk-width-1-1">Generate</ajax-button>
      </ajax-form>
    </div>
  </div>

</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>
